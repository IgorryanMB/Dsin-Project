    <script>
        document.getElementById('loginBtn').addEventListener('click', function() {
            document.getElementById('loginForm').classList.add('active');
            document.getElementById('cadastroForm').classList.remove('active');
        });
        
        document.getElementById('cadastroBtn').addEventListener('click', function() {
            document.getElementById('cadastroForm').classList.add('active');
            document.getElementById('loginForm').classList.remove('active');
        });

        document.getElementById('toggleTheme').addEventListener('click', function() {
            document.body.classList.toggle('light-mode');
            this.textContent = document.body.classList.contains('light-mode') ? 'Escuro' : 'Claro';
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
